{
  "processes": [
    "bin/router",
    "bin/proxy",
    "bin/dbwriter",
    "bin/keysigner",
    "bin/verifier",
    "bin/browserid",
    "bin/static"
  ],
  "env": {
    "CONFIG_FILES": "$HOME/code/config/production.json,$HOME/code/config/aws.json,$HOME/config.json,$HOME/code/config/l10n-all.json"
