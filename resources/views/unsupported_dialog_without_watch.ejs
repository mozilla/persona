  <section id="error" class="unsupported">
      <div class="table">
        <div class="vertical contents">
          <h2 id="reason">
            <%= gettext("Sorry, your browser does not support signing in to this website.") %>
          </h2>

          <p>
            <%- format(gettext("The owner of this website needs to update to use Persona's <a %s>navigator.id.watch()</a> feature."), [" target='_blank' href='https://developer.mozilla.org/en-US/docs/Web/API/navigator.id.watch'"]) %>
          </p>
        </div>
      </div>
  </section>
