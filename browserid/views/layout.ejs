  <% if (fullpage) { %>
        <span id="labslogo">Mozilla Labs</span>
        <h1>BrowserID</h1>
        <h2>A better way to sign in.</h2>
  <% } else { %>
        <h1><a href="/"><img src="i/browserid_logo_lil.png">BrowserID</a></h1>
        <h2><%- title %></h2>
  <% } %>
      </hgroup>
  </header>
